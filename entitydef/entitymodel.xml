<entitymodel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/entitymodel.xsd">
    <!-- ========================================================= -->
    <!-- ======================== Defaults ======================= -->
    <!-- ========================================================= -->
    <title>Entity of OfbizDemo Component</title>
    <description>None</description>
    <copyright></copyright>
    <version>1.0</version>

    <entity entity-name="OfbizDemoType" package-name="org.apache.ofbiz.ofbizdemo" title="OfbizDemo Type Entity">
        <field name="ofbizDemoTypeId" type="id"><description>primary sequenced ID</description></field>
        <field name="description" type="description"></field>
        <prim-key field="ofbizDemoTypeId"/>
    </entity>

    <entity entity-name="OfbizDemo" package-name="org.apache.ofbiz.ofbizdemo" title="OfbizDemo Entity">
        <field name="ofbizDemoId" type="id"><description>primary sequenced ID</description></field>
        <field name="ofbizDemoTypeId" type="id"></field>
        <field name="firstName" type="name"></field>
        <field name="lastName" type="name"></field>
        <field name="comments" type="comment"></field>
        <prim-key field="ofbizDemoId"/>
        <relation type="one" fk-name="ODEM_OD_TYPE_ID" rel-entity-name="OfbizDemoType">
            <key-map field-name="ofbizDemoTypeId"/>
        </relation>
    </entity>

    <view-entity entity-name="PartySupplier"
                 title="Party, PartyGroup and PartyRole of Supplier View Entity">
        <member-entity entity-alias="PY" entity-name="Party"/>
        <member-entity entity-alias="PYGP" entity-name="PartyGroup"/>
        <member-entity entity-alias="PYR" entity-name="PartyRole"/>
        <member-entity entity-alias="PER" entity-name="Person"/>
        <alias-all entity-alias="PY"/>
        <alias entity-alias="PYGP" name="supplierName" field="groupName"/>
        <alias entity-alias="PYR" name="roleTypeId"/>
        <alias entity-alias="PER" name="firstName"/>
        <alias entity-alias="PER" name="middleName"/>
        <alias entity-alias="PER" name="lastName"/>
        <view-link entity-alias="PY" rel-entity-alias="PYGP" rel-optional="true">
            <key-map field-name="partyId"/>
        </view-link>
        <view-link entity-alias="PY" rel-entity-alias="PER" rel-optional="true">
            <key-map field-name="partyId"/>
        </view-link>
        <view-link entity-alias="PY" rel-entity-alias="PYR" rel-optional="true">
            <key-map field-name="partyId"/>
       <!-- <entity-condition filter-by-date="true"/>  -->
        </view-link>
        <entity-condition>
            <condition-expr entity-alias="PYR" field-name="roleTypeId" operator="equals" value="SUPPLIER"/>
            <order-by field-name="supplierName"/>
        </entity-condition>
    </view-entity>

</entitymodel>